<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.innovatehub.mobile.ankita_mehta.tinyears">

    <!-- This permission helps in getting results from server -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- This permission helps in writing results to external storage -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- This permission helps in recording audio using mic of device -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- Declaring Intent Service in Manifest -->
    <service
        android:name=".UploadService"
        android:enabled="true"
        android:exported="true" />

    <application
        android:allowBackup="true"
        android:configChanges="orientation|screenSize|smallestScreenSize"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".UploadIntentService"
            android:exported="false"></service>
    </application>

</manifest>