<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_record"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:screenOrientation="portrait"
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="vertical"
        tools:context="in.innovatehub.mobile.ankita_mehta.tinyears.RecordActivity"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:gravity="center|center_horizontal">

            <TextView
                android:id="@+id/stopCountTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:fontFamily="serif-monospace"
                android:typeface="normal"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textStyle="normal|bold" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/micicon"
                android:background="@drawable/gyro_animation" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/playicon"
                android:background="@drawable/gyro_animation" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center|center_horizontal"
            android:orientation="vertical">
            <ProgressBar android:indeterminate="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/marker_progress"
                android:visibility="invisible"
                style="?android:attr/progressBarStyle"
                android:layout_gravity="center_vertical|center_horizontal"/>
            <Button
                android:id="@+id/showMeStats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/showMeStats"
                android:gravity="center" />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/live_chart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gyro_animation">

        </RelativeLayout>

    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@drawable/ic_menu_camera"
        android:layout_margin="16dp"
        android:layout_gravity="bottom|end"
        app:backgroundTint="@android:color/holo_green_light"
        app:rippleColor="?attr/colorButtonNormal"
        android:layout_alignParentRight="true"
        app:elevation="10dp" />
</android.support.design.widget.CoordinatorLayout>